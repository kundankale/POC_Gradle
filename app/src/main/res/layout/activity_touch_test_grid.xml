<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouchTestGridActivity">

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/lable_touchgridscreen"
        android:layout_margin="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/result_camera"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switchView_mode"
        android:layout_alignStart="@+id/switchView_mode"
        android:layout_centerVertical="true"
        android:text="Test Result:-" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"

        android:layout_margin="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Switch
        android:id="@+id/switchView_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camera_button"
        android:layout_alignStart="@+id/camera_button"
        android:layout_below="@+id/camera_button"
        android:layout_marginTop="19dp"
        android:text="Execution Mode:    "
        android:textOff="Auto"
        android:textOn="Manual"
        android:showText="true"
        android:padding="16dp"
        />


</RelativeLayout>
